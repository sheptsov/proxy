{
  "manifest_version": 3,
  "name": "Proxy Switcher",
  "description": "Proxy Switcher",
  "version": "1.1",
  "permissions": [
    "storage",
    "proxy",
    "contextMenus",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}